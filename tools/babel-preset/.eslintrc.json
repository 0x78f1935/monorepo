{
  "plugins": [
    "babel",
    "verdaccio"
  ],
  "extends": [
    "eslint:recommended",
    "google",
    "@verdaccio",
    "plugin:prettier/recommended",
    "plugin:verdaccio/recommended"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.4.2"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "__APP_VERSION__": true
  },
  "rules": {
    "babel/no-invalid-this": "warn",
    "prettier/prettier": ["error", null, "@prettier"],
    "semi": ["error"],
    "comma-dangle": "off",
    "camelcase": "off",
    "no-useless-escape": ["error"],
    "no-invalid-this": "off",
    "handle-callback-err": ["error"],
    "no-fallthrough": ["error"],
    "no-new-require": ["error"],
    "max-len": ["error", 160],
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "prefer-spread": "warn",
    "prefer-rest-params": "warn",
    "linebreak-style": "off",
    "quote-props":["error", "as-needed"],
    "verdaccio/jsx-no-style": ["warn"],
    "verdaccio/jsx-spread": ["warn"],
    "jest/expect-expect": "off",
    "@typescript-eslint/no-var-requires": "off"
  }
}
