{
  "name": "verdaccio-auth-memory",
  "version": "1.1.5",
  "description": "Auth plugin for Verdaccio that keeps users in memory",
  "keywords": [
    "verdaccio",
    "plugin",
    "auth",
    "memory"
  ],
  "author": "Juan Picado <juanpicado19@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/src/index.d.ts",
  "files": [
    "lib/"
  ],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@verdaccio/commons-api": "0.1.2"
  },
  "devDependencies": {
    "@verdaccio/babel-preset": "^2.0.0",
    "@verdaccio/eslint-config": "^2.0.0",
    "@verdaccio/types": "^7.0.0"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:js": "babel src/ --out-dir lib --extensions \".ts,.tsx\"",
    "build:types": "tsc --emitDeclarationOnly",
    "format": "prettier --single-quote --trailing-comma none --write \"{src,test}/**/*.ts\"",
    "lint": "npm run type-check && eslint . --ext .js,.ts",
    "lint:stage": "lint-staged",
    "pretest": "npm run lint",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint .",
      "prettier --write",
      "git add"
    ]
  }
}
